<%- layout("layouts/boilerplate.ejs") %>

<div class="show-container offset-1 mt-4">
    <!-- Listing Title -->
    <div class="text-center">
        <h2 class="text" ><%= listing.title %></h2>
    </div>

    <!-- Listing Details Card -->
    <div class="col-md-9 offset-2 mx-auto show-card listing-card">
        <div class="card shadow-lg">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>">
            <div class="card-body text-center">
                <p class="card-text">
                    <p class="listing-owner">
                        üë§ Listed by: <%= listing.owner.username %>
                    </p><br>                      
                    <strong>Description:</strong> <%= listing.description %> <br>
                    <strong>Price:</strong> &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
                    <strong>Location:</strong> <%= listing.location %> <br>
                    <strong>Country:</strong> <%= listing.country %> <br>
                </p>
            </div>
        </div>     
    </div>

    <!-- Action Buttons -->
     
    <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
    <div class="btns d-flex justify-content-center gap-8  ">
        <a href="/listings" class="btn btns ad-btn mt-1 ml-0 d-flex justify-content-center">üîô Back to Listings</a>
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning ad-btn d-flex justify-content-center">‚úèÔ∏è Edit</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" class="d-inline">
            <button class="btn btn-danger ad-btn d-flex justify-content-center">üóëÔ∏è Delete</button>
        </form>
    </div>
    <% } %>
    <!-- Review Section -->

    <div class="col-md-8 mx-auto mt-4">
        <hr>
        <% if(currUser) { %>
        <h4 class="text-center text-success">Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="rating" class="form-label">‚≠ê Rating</label>
                <!-- Range Labels -->
               <div class="d-flex justify-content-between px-1 small text-muted">
                   <span>1 ‚≠ê</span>
                   <span>2 ‚≠ê</span>
                   <span>3 ‚≠ê</span>
                   <span>4 ‚≠ê</span>
                   <span>5 ‚≠ê</span>
                </div>

                <input type="range" name="review[rating]" id="rating" min="1" max="5"  class="form-range custom-range mt-2" > 
            </div>
            
            
            <div class="mb-3">
                <label for="comment" class="form-label">üí¨ Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    Please write a review.
                </div>  
            </div>
            <button class="btn btn-success ad-btn">üì© Submit</button>
        </form>
        <hr>
        <% } %>

        <!-- Display All Reviews -->
      <% if(listing.reviews.length > 0) { %>
        <div class="row">
            <p><b>üìú All Reviews</b></p>
            <% for(review of listing.reviews) { %>
                <div class="card col-md-5 mt-3 ms-3 shadow-sm">
                    <div class="card-body">
                        <p class="card-text"><strong>@<%= review.author.username %></strong></p>
                        <p class="card-text text-warning">
                            <% for(let i = 0; i < review.rating; i++) { %> ‚≠ê <% } %>
                        </p>
                        <p class="card-text"><%= review.comment %></p>
                        
                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <% if(currUser && currUser._id.equals(review.author._id)) {%>
                            <button class="btn btn-danger btn-sm mt-2">‚ùå Delete</button>
                            <% } %>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
      <% } %>
    </div>
</div>
